<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.skin.TabPaneSkin.TabContentRegion?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.socialnetworkgui.controller.DMController"
            stylesheets="@../css/directmessage.css">
    <VBox alignment="CENTER" spacing="20.0">
        <padding>
            <Insets top="20.0" bottom="20.0" left="20.0" right="20.0"/>
        </padding>
        <ListView fx:id="messageListView" prefWidth="410" prefHeight="360"/>
        <HBox alignment="CENTER" spacing="20.0" prefWidth="410">
            <TextField fx:id="fieldMessage"/>
            <Button mnemonicParsing="false" onAction="#handleSendMessage" text="Send" defaultButton="true"/>
        </HBox>
    </VBox>
</AnchorPane>
